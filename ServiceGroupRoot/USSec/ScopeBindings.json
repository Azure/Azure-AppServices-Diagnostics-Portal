{
  "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/scopeBindings.json",
  "contentVersion": "0.0.0.1",
  "scopeBindings": [
    {
      "scopeTagName": "General",
      "bindings": [
        {
          "find": "__TENANT_ID__",
          "replaceWith": "$callerTenantId()"
        },
        {
          "find": "__CLOUD_ENVIRONMENT__",
          "replaceWith": "$rolloutInfra()"
        },
        {
          "find": "__OBSERVER_SITENAME__",
          "replaceWith": "diagobserver"
        },
        {
          "find": "__RUNTIMEHOST_SITENAME__",
          "replaceWith": "diag-runtimehost"
        },
        {
          "find": "__KEYVAULTNAME__",
          "replaceWith": "runtimehost-kv"
        }
      ]
    },
    {
      "scopeTagName": "Applens",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "applens"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "ApplensNationalCloud.zip"
        }
      ]
    },
    {
      "scopeTagName": "AppServiceDiagnostics",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "appservice-diagnostics"
        },
        {
          "find": "__TARGET_DEPLOYMENT_SLOT__",
          "replaceWith": "staging"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "bin\\AppServiceDiagnostics.zip"
        }
      ]
    },
    {
      "scopeTagName": "USSecWestRegion",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "ussecwest"
        },
        {
          "find": "__LOCATION__",
          "replaceWith": "USSec West"
        }
      ]
    },
    {
      "scopeTagName": "USNatWestRegion",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "usnatwest"
        },
        {
          "find": "__LOCATION__",
          "replaceWith": "USNat West"
        }
      ]
    },
    {
      "scopeTagName": "USSEC",
      "bindings": [
        {
          "find": "__APPSERVICE_DNS_SUFFIX__",
          "replaceWith": "appservice.microsoft.scloud"
        },
        {
          "find": "__DSTS_REALM__",
          "replaceWith": "svc://applens@appservice.microsoft.scloud/"
        },
        {
          "find": "__DSTS_METADATA_ADDRESS__",
          "replaceWith": "https://prod-dsts.dsts.core.microsoft.scloud/dsts/api/federationmetadata"
        },
        {
          "find": "__DSTS_ISSUER__",
          "replaceWith": "https://prod-passive-dsts.dsts.core.microsoft.scloud/v2/wsfederation"
        },
        {
          "find": "__AZURE_PORTAL_DOMAIN__",
          "replaceWith": "portal.azure.microsoft.scloud"
        }
      ]
    }
  ]
}