{
  "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/scopeBindings.json",
  "contentVersion": "0.0.0.1",
  "scopeBindings": [
    {
      "scopeTagName": "General",
      "bindings": [
        {
          "find": "__TENANT_ID__",
          "replaceWith": "$callerTenantId()"
        },
        {
          "find": "__CLOUD_ENVIRONMENT__",
          "replaceWith": "$rolloutInfra()"
        },
        {
          "find": "__OBSERVER_SITENAME__",
          "replaceWith": "diagobserver"
        },
        {
          "find": "__RUNTIMEHOST_SITENAME__",
          "replaceWith": "diag-runtimehost-prod-bn1-001"
        },
        {
          "find": "__KEYVAULTNAME__",
          "replaceWith": "runtimehost-kv"
        },
        {
          "find": "__AZURE_AD_AUTHORITY__",
          "replaceWith": "https://login.microsoftonline.com/72f988bf-86f1-41af-91ab-2d7cd011db47"
        },
        {
          "find": "__OBSERVER_AAD_CLIENTID__",
          "replaceWith": "4be0dbdb-a5c2-4593-a851-895070a09dab"
        },
        {
          "find": "__APPSERVICE_DNS_SUFFIX__",
          "replaceWith": "azurewebsites.us"
        },
        {
          "find": "__STORAGE_DNS_SUFFIX__",
          "replaceWith": "core.windows.net"
        },
        {
          "find": "__DSTS_REALM__",
          "replaceWith": "svc://applens-wus@azurewebsites.net/"
        },
        {
          "find": "__DSTS_METADATA_ADDRESS__",
          "replaceWith": "https://prod-dsts.dsts.core.windows.net/dsts/api/federationmetadata"
        },
        {
          "find": "__DSTS_ISSUER__",
          "replaceWith": "https://prod-passive-dsts.dsts.core.windows.net/v2/wsfederation"
        },
        {
          "find": "__AZURE_PORTAL_DOMAIN__",
          "replaceWith": "portal.azure.us"
        }
      ]
    },
    {
      "scopeTagName": "Applens",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "applens"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "ApplensNationalCloud.zip"
        },
        {
          "find": "__OBSERVER_AAD_APPKEY__",
          "replaceWith": "@Microsoft.KeyVault(SecretUri=https://runtimehost-kv-bn1.vault.usgovcloudapi.net/secrets/SupportObserver--AppKey)"
        }
      ]
    },
    {
      "scopeTagName": "AppServiceDiagnostics",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "appservice-diagnostics"
        },
        {
          "find": "__TARGET_DEPLOYMENT_SLOT__",
          "replaceWith": "staging"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "AppServiceDiagnostics.zip"
        }
      ]
    },
    {
      "scopeTagName": "USGovVirginiaLocation",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "bn1"
        },
        {
          "find": "__LOCATION__",
          "replaceWith": "USGov Virginia"
        }
      ]
    }
  ]
}