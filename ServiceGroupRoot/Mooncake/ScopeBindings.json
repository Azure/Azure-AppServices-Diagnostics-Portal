{
  "$schema": "https://ev2schema.azure.net/schemas/2020-01-01/scopeBindings.json",
  "contentVersion": "0.0.0.1",
  "scopeBindings": [
    {
      "scopeTagName": "General",
      "bindings": [
        {
          "find": "__TENANT_ID__",
          "replaceWith": "$callerTenantId()"
        },
        {
          "find": "__CLOUD_ENVIRONMENT__",
          "replaceWith": "$rolloutInfra()"
        },
        {
          "find": "__OBSERVER_SITENAME__",
          "replaceWith": "diagobserver"
        },
        {
          "find": "__RUNTIMEHOST_SITENAME__",
          "replaceWith": "diag-runtimehost-bjb"
        },
        {
          "find": "__KEYVAULTNAME__",
          "replaceWith": "runtimehost-kv"
        },
        {
          "find": "__APPSERVICE_DNS_SUFFIX__",
          "replaceWith": "chinacloudsites.cn"
        },
        {
          "find": "__DSTS_REALM__",
          "replaceWith": "svc://applens@chinacloudsites.cn/"
        },
        {
          "find": "__DSTS_METADATA_ADDRESS__",
          "replaceWith": "https://prod-dsts.dsts.core.chinacloudapi.cn/dsts/api/federationmetadata"
        },
        {
          "find": "__DSTS_ISSUER__",
          "replaceWith": "https://prod-passive-dsts.dsts.core.chinacloudapi.cn/v2/wsfederation"
        },
        {
          "find": "__AZURE_PORTAL_DOMAIN__",
          "replaceWith": "portal.azure.cn"
        }
      ]
    },
    {
      "scopeTagName": "ChinaNorthRegion",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "bjb"
        },
        {
          "find": "__LOCATION__",
          "replaceWith": "China North"
        }
      ]
    },
    {
      "scopeTagName": "Applens",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "applens"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "ApplensNationalCloud.zip"
        },
        {
          "find": "__OBSERVER_AAD_APPKEY__",
          "replaceWith": "@Microsoft.KeyVault(SecretUri=https://runtimehost-kv-bjb.vault.azure.cn/secrets/SupportObserver--AppKey)"
        },
        {
          "find": "__RUNTIMEHOST_AAD_APPKEY__",
          "replaceWith": "@Microsoft.KeyVault(SecretUri=https://runtimehost-kv-bjb.vault.azure.cn/secrets/RuntimeHost--AppKey)"
        }
      ]
    },
    {
      "scopeTagName": "AppServiceDiagnostics",
      "bindings": [
        {
          "find": "__SITENAME__",
          "replaceWith": "appservice-diagnostics"
        },
        {
          "find": "__TARGET_DEPLOYMENT_SLOT__",
          "replaceWith": "staging"
        },
        {
          "find": "__ZIP_PACKAGE__",
          "replaceWith": "AppServiceDiagnostics.zip"
        }
      ]
    }
  ]
}