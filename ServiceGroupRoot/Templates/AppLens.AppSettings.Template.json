{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "slotName": {
            "type": "string",
            "metadata": {
                "description": "Target deployment slot to zipdeploy into."
            },
            "defaultValue": "staging"
        },
        "cloudEnvironment": {
            "type": "string"
        },
        "dstsRealm": {
          "type": "string"
        },
        "dstsRealmStaging": {
          "type": "string"
        },
        "dstsMetadataAddress": {
          "type": "string"
        },
        "dstsIssuer": {
          "type": "string"
        },
        "runtimeHostEndpoint": {
            "type": "string"
        },
        "runtimeHostEndpointStaging": {
            "type": "string"
        }
    },
    "resources": [
        {
            "name": "[concat(parameters('siteName'),'\/','\/appsettings')]",
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "properties": {
                "ASPNETCORE_ENVIRONMENT": "Production",
                "DatacenterFederationConfiguration:Realm": "[parameters('dstsRealm')]",
                "DiagnosticRole:AppServiceEndpoint": "[parameters('runtimeHostEndpoint')]"
            }
        },
        {
            "name": "[concat(parameters('siteName'),'\/',parameters('slotName'),'\/','\/appsettings')]",
            "type": "Microsoft.Web/sites/slots/config",
            "apiVersion": "2018-11-01",
            "properties": {
                "WEBSITE_ADD_SITENAME_BINDINGS_IN_APPHOST_CONFIG": "1",
                "WEBSITE_LOAD_CERTIFICATES": "*",
                "ASPNETCORE_ENVIRONMENT": "Production",
                "CloudDomain": "[if(or(equals(parameters('cloudEnvironment'), 'Prod'), equals(parameters('cloudEnvironment'), 'Test')), 'PublicAzure', parameters('cloudEnvironment'))]",
                "DatacenterFederationConfiguration:Realm": "[parameters('dstsRealmStaging')]",
                "DatacenterFederationConfiguration:MetadataAddress": "[parameters('dstsMetadataAddress')]",
                "DatacenterFederationConfiguration:Issuer": "[parameters('dstsIssuer')]",
                "DiagnosticRole:AppServiceEndpoint": "[parameters('runtimeHostEndpointStaging')]"
            }
        },
        {
            "name": "[concat(parameters('siteName'),'\/slotconfignames')]",
            "type": "Microsoft.Web/sites/config",
            "comments": "This specifies the names of all the appsettings we want to be set to sticky",
            "apiVersion": "2018-11-01",
            "properties": {
                "appSettingNames": [
                    "ASPNETCORE_ENVIRONMENT",
                    "DatacenterFederationConfiguration:Realm",
                    "DiagnosticRole:AppServiceEndpoint"
                ]
            }
        }
    ]
}