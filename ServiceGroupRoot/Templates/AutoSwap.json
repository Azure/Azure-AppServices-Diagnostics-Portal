{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName1": {
            "type": "string"
        },
        "sitename2": {
            "type": "string"
        },
        "buildVersion": {
            "defaultValue": "[utcNow()]",
            "type": "String"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        }

    },
    "variables": {
        "siteName": "[if(contains(parameters('siteName1'), '__'), parameters('sitename2'), parameters('siteName1'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites/slots",
            "apiVersion": "2018-02-01",
            "name": "[concat(variables('siteName'), '/staging')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "properties": {
                "buildVersion": "[parameters('buildVersion')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-02-01",
            "name": "[variables('siteName')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites/slots', variables('siteName'), 'staging')]"
            ],
            "properties": {
                "targetBuildVersion": "[parameters('buildVersion')]"
            }
        }
    ]
}