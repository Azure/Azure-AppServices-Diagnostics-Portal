{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string"
        },
        "sitename2": {
            "type": "string",
            "defaultValue": ""
        },
        "slotName": {
            "type": "string",
            "metadata": {
                "description": "Target deployment slot to zipdeploy into."
            },
            "defaultValue": "staging"
        },
        "servicePackageLink": {
            "type": "securestring",
            "metadata": {
                "description": "The URL for the GitHub repository that contains the project to deploy."
            }
        }
    },
    "variables": {
        "varSiteName": "[if(contains(parameters('siteName'), '__'), parameters('sitename2'), parameters('siteName'))]"
    },
    "resources": [
        {
            "apiVersion": "2014-06-01",
            "type": "Microsoft.Web/sites/slots/extensions",
            "name": "[concat(variables('varSiteName'),'\/',parameters('slotName'),'\/','\/zipdeploy')]",
            "properties": {
                "packageUri": "[parameters('servicePackageLink')]"
            }
        }
    ]
}